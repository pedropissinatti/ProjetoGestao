<div class="row">
    <div class="col-md">
        <table class="table">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Data de vencimento</th>
                    <th>Valor</th>
                    <th>Não pago/Pago</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count > 0)
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                            <td>@(item.Value / 5)</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" checked="@(item.Cor==1)" id="flexSwitchCheckChecked" name="pago">
                                </div>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td colspan="4">Nenhum registro encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>