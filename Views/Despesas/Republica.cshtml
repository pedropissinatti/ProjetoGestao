@model DespesasControlApp.DTOs.ListDespesasDTO

<div class="text-left">
    <h1 class="display-8">República</h1>
</div>
<h5>Gastos Totais</h5>

<div class="row">
    <div class="col=md">
        <table class="table">
            <tbody>
                @if(Model.Items.Count > 0)
                {
                    foreach(var item in Model.Items)
                    {

                        
                        <tr class="oi">
                            <td>@item.Description</td>
                            <td>R$ @item.Value</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4">Nenhum registro encontrado.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>



<style>
    .row {
       
    }

    table {
        border-collapse: separate;
        border-spacing: 0 8px;
        margin-top: -8px;
    }

    td {
        border: 1px solid #fad77b;
        border-left-width: 0;
        min-width: 120px;
        height: 18px;
        color: gray;
        font-size: 17px;

    }

        td:first-child {
            border-left-width: 1px;
        }

        tbody{
        background-color: #fad77b;
    }



</style>


