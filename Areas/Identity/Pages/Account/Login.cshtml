@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
<meta name="viewport" content="width=device-width, initial-scale=1.0, max-scale=1.0">

<div class="poo">
<section class="gradient-custom ">
    <div class="container py-5">
        <div class="row ">
                <div class="fundo" style="background-color: #ffffff; padding: 3rem; padding-top: 5rem; margin-left: 310px; margin-top: 170px; border-radius: 35px;">
                <section>
                        <div class="logo-container">
                            <img src="/css/logo.png" alt="Logo" class="logo" style="width:140px; height:67px; margin-left: 160px; margin-top: -30px;">
                        </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating" style="width: 370px; margin-left: 70px; margin-top: 30px; font-size:20px; font-weight: bold; color:#947573;">
                                <input asp-for="Input.Email" class="form-control form-control-lg" style="background-color:#ffd8d9; " autocomplete="username" aria-required="true" placeholder="Email" />
                                <label asp-for="Input.Email" class="form-label" style="margin-left:0.5cm;">Login</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <br>
                            <div class="form-floating" style="width: 370px; margin-left: 70px; font-size:20px; font-weight: bold; color:#947573;">
                                <input asp-for="Input.Password" class="form-control" style="background-color:#ffd8d9;" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password" class="form-label" style="margin-left:0.5cm;">Senha</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                            <div class="esqueceusenha">
                                <p><a id="forgot-password" asp-page="./ForgotPassword" style="font-size:20px; font-weight: bold; color:#b0b0b0;">Esqueceu a senha?</a></p>
                                @*                             <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar Novo Usuario</a></p>
                                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar e-mail de confirmação</a></p> *@
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-lg " style="margin-left: 160px; margin-top: 10px;">Entrar</button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
